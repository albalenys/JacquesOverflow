

<% @questions.each do |question| %>
  <table>
    <tr>
      <td class="rating">
        <%= question.rating %> Rating
      </td>
      <td>
        <p><%= link_to question.title, question_path(question) %></p>
        <p><%= question.content %></p>
        <%= image_tag(question.submitter.avatar_url, class: "icon") %> <sub>asked <%= question.created_at %> <%= question.submitter.username%></sub>
      </td>
    </tr>
  </table>
  <hr>
<% end %>

<%= link_to "Ask a Question", new_question_path %>
